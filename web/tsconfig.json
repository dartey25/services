{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true, // Enable type checking in JavaScript files
    "allowJs": true, // Allow JavaScript files to be compiled
    "noEmit": true // Do not emit output
  },
  "include": ["src/**/*"]
}
